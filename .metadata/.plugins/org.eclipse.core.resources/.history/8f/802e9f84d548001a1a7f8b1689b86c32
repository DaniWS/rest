                - $ref: 'https://localhost:8080/schemas/GatewayListSchema.json'
                - $ref: 'https://localhost:8080/schemas/MultiSensorListSchema.json'
                - $ref: 'https://localhost:8080/schemas/RegionListSchema.json'
                - $ref: 'https://localhost:8080/schemas/RegionSchema.json'
                - $ref: 'https://localhost:8080/schemas/SensorListSchema_Complete.json'
                - $ref: 'https://localhost:8080/schemas/SensorListSchema_Simplified.json'
                - $ref: 'https://localhost:8080/schemas/SensorSchema_Simplified.json'
            example:
              {
                resourceId: 'urn:afc:AS04:environmentalObservations:TST:airSensor:airTemperatureSensor0012',
                sequenceNumber: 123,
                location:
                {
